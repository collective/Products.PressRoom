<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main"
          tal:define="text python:here.CookedBody(stx_level=2);
                      len_text python:len(text.strip())">


        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>

        <h1 tal:content="object_title" class="documentFirstHeading">
            Title or id
        </h1>

        <span tal:condition="here/reporter | nothing">By <span tal:replace="here/reporter" /> <br /></span>
        <span tal:condition="here/publication | nothing" tal:define="publication python:test(here['publication'] and not here['publication'][-1],here['publication'][:-1],here['publication'])"> 
        <span tal:condition="not: here/permalink | nothing" 
              tal:replace="python: ', '.join(publication)" /> 
        <a tal:condition="here/permalink | nothing" tal:content="python: ', '.join(publication)" tal:attributes="href here/permalink" /> <br /></span>
        <span tal:condition="here/storydate | nothing"
              tal:define="storyDate here/storydate"><span tal:replace="python:storyDate.strftime('%M %d, %Y')" />  <br /></span>

        <p class="documentDescription"
           tal:content="here/Description"
           tal:condition="here/Description">
            News summary
        </p>

        <div class="newsImageContainer"
             tal:condition="here/image_mini|nothing">
            <a href="#"
               tal:attributes="href string:$here_url/image/image_view_fullscreen">
               <img tal:replace="structure python: here.tag(scale='mini', css_class='newsImage')" src="" alt="" />
            </a>
            <p class="discreet"
                  tal:content="here/getImageCaption">Image Caption</p>
        </div>

        <p tal:condition="python: not len_text and is_editable"
           i18n:translate="no_body_text"
           class="discreet">
            This item does not have any body text, click the edit tab to change it.
        </p>

        <div class="stx"
             tal:condition="len_text"
             tal:omit-tag="python:here.text_format != 'structured-text'">
            <div tal:replace="structure text" />
        </div>

        <div metal:use-macro="here/document_byline/macros/byline">
            Get the byline - contains details about author and modification date.
        </div>
        
        <div class="visualClear"></div>

    </tal:main-macro>
</div>

</body>
</html>

