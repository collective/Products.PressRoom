<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main"
          tal:define="text python:here.CookedBody(stx_level=2);
                      len_text python:len(text.strip())">


        <div metal:use-macro="context/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>

        <h1 tal:content="object_title" class="documentFirstHeading">
            Title or id
        </h1>

        <span tal:condition="context/reporter | nothing">By <span tal:replace="context/reporter" /> <br /></span>
        
        <tal:pub condition="context/getPublication">
            <a tal:condition="context/getPermalink"
               tal:attributes="href context/getPermalink"
               tal:content="context/getPublication"
            />
            <span tal:condition="not:context/getPermalink"
                  tal:content="string:${context/getPublication}, ">
            </span>
        </tal:pub>
        <tal:nopub condition="python: (not context.getPublication()) and context.getPermalink()">
            <a tal:attributes="href context/getPermalink"
               tal:content="context/getPermalink"
            />
        </tal:nopub>
        
        <span tal:condition="context/storydate | nothing"
              tal:define="storyDate context/storydate"><span tal:replace="python:storyDate.strftime('%B %d, %Y')" />  <br /></span>

        <p class="documentDescription"
           tal:content="context/Description"
           tal:condition="context/Description">
            News summary
        </p>

        <div class="newsImageContainer"
             tal:condition="context/image_mini|nothing">
            <a href="#"
               tal:attributes="href string:$here_url/image/image_view_fullscreen">
               <img tal:replace="structure python: here.tag(scale='mini', css_class='newsImage')" src="" alt="" />
            </a>
            <p class="discreet"
                  tal:content="context/getImageCaption">Image Caption</p>
        </div>

        <p tal:condition="python: not len_text and is_editable"
           i18n:translate="no_body_text"
           class="discreet">
            This item does not have any body text, click the edit tab to change it.
        </p>

        <div class="stx"
             tal:condition="len_text"
             tal:omit-tag="python:here.text_format != 'structured-text'">
            <div tal:replace="structure text" />
        </div>

        <div metal:use-macro="context/document_byline/macros/byline">
            Get the byline - contains details about author and modification date.
        </div>
        
        <div class="visualClear"></div>

    </tal:main-macro>
</div>

</body>
</html>

