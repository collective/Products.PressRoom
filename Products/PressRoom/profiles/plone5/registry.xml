<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="pressroom">

  <record name="plone.default_page_types">
    <value purge="False">
      <element>PressClip</element>
      <element>PressRelease</element>
    </value>
  </record>

  <records interface="Products.CMFPlone.interfaces.ITinyMCEResourceTypesSchema" prefix="plone">
    <value key="contains_objects" purge="false"><element>PressRoom</element></value>
  </records>

  <records interface="plone.app.querystring.interfaces.IQueryField"
           prefix="plone.app.querystring.field.getReleaseDate">
     <value key="title" i18n:translate="">Release Date</value>
     <value key="description" i18n:translate="">The date a Press Clip ran in its original publication or the date a Press Release was "released".</value>
     <value key="enabled">True</value>
     <value key="sortable">True</value>
     <value key="operations">
         <element>plone.app.querystring.operation.date.lessThan</element>
         <element>plone.app.querystring.operation.date.largerThan</element>
         <element>plone.app.querystring.operation.date.between</element>
         <element>plone.app.querystring.operation.date.lessThanRelativeDate</element>
         <element>plone.app.querystring.operation.date.largerThanRelativeDate</element>
         <element>plone.app.querystring.operation.date.today</element>
         <element>plone.app.querystring.operation.date.beforeToday</element>
         <element>plone.app.querystring.operation.date.afterToday</element>
         <element>plone.app.querystring.operation.date.beforeRelativeDate</element>
         <element>plone.app.querystring.operation.date.afterRelativeDate</element>
     </value>
     <value key="group" i18n:translate="">Dates</value>
  </records>

  <records interface="plone.app.querystring.interfaces.IQueryField"
           prefix="plone.app.querystring.field.getStorydate">
     <value key="title" i18n:translate="">Story Date</value>
     <value key="description" i18n:translate="">The date a Press Clip ran in its original publication or the date a Press Release was "released".</value>
     <value key="enabled">True</value>
     <value key="sortable">True</value>
     <value key="operations">
         <element>plone.app.querystring.operation.date.lessThan</element>
         <element>plone.app.querystring.operation.date.largerThan</element>
         <element>plone.app.querystring.operation.date.between</element>
         <element>plone.app.querystring.operation.date.lessThanRelativeDate</element>
         <element>plone.app.querystring.operation.date.largerThanRelativeDate</element>
         <element>plone.app.querystring.operation.date.today</element>
         <element>plone.app.querystring.operation.date.beforeToday</element>
         <element>plone.app.querystring.operation.date.afterToday</element>
         <element>plone.app.querystring.operation.date.beforeRelativeDate</element>
         <element>plone.app.querystring.operation.date.afterRelativeDate</element>
     </value>
     <value key="group" i18n:translate="">Dates</value>
  </records>

  <records prefix="plone.resources/pressroom-styles"
           interface='Products.CMFPlone.interfaces.IResourceRegistry'>
    <value key="css">
      <element>PressRoom.css</element>
    </value>
  </records>

  <records prefix="plone.bundles/pressroom"
           interface='Products.CMFPlone.interfaces.IBundleRegistry'>
    <value key="resources">
      <element>pressroom-styles</element>
    </value>
    <value key="enabled">True</value>
  </records>

</registry>
